# ===========================================
# CLIENT-SIDE ENVIRONMENT VARIABLES
# These are exposed to the browser (VITE_ prefix)
# ===========================================

# Notion API (for fetching published content)
VITE_NOTION_API_KEY=secret_xxx
VITE_NOTION_DATABASE_ID=your_database_id

# Google Maps API (for displaying maps)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key


# ===========================================
# SERVER-SIDE ENVIRONMENT VARIABLES
# These are only available in API routes (Vercel Functions)
# ===========================================

# Notion API (for enrichment workflow - same keys, no VITE_ prefix)
NOTION_API_KEY=secret_xxx
NOTION_DATABASE_ID=your_database_id

# Google Places API (enable Places API in Google Cloud Console)
# Same project as Maps API, just enable the Places API
GOOGLE_PLACES_API_KEY=your_google_api_key

# Yelp Fusion API (fallback for image fetching)
# Get key from: https://www.yelp.com/developers/v3/manage_app
YELP_API_KEY=your_yelp_api_key

# Vercel Blob Storage (for storing fetched images)
# Get token from: Vercel Dashboard > Storage > Create Blob Store
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# Admin Secret (optional - protects the admin page)
# Set any random string to require password for /api/admin
ADMIN_SECRET=your_secret_password


# ===========================================
# SMS CHATBOT (Optional - text-to-upload feature)
# ===========================================

# Anthropic API (for AI parsing of text messages)
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxx

# Twilio (for receiving SMS)
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# Allowed phone numbers (comma-separated, Chloe's phone number)
# Format: +1XXXXXXXXXX
ALLOWED_PHONE_NUMBERS=+12146209319
